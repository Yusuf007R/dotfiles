* {
  font-size: 12px;
  color: #cdd6f4;
  font-weight: 500;
  font-family: "JetBrainsMono NFP";
  margin: 0;
  padding: 0;
}

.widget {
  background-color: #1e1e2e;
}

.widget .label {
  padding: 1px 2px;
}

.widget .label.alt {
  padding: 1px 8px;
}

.container-left,
.container-center,
.container-right {
  margin: 0;
  padding: 0;
}

.clock-widget {
  border-radius: 15px;
  padding: 0 8px;
}

.komorebi-active-layout {
  padding: 0 4px 0 0;
}

.komorebi-active-layout .label {
  font-weight: 600;
}

.komorebi-workspaces {
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
}

.komorebi-workspaces .widget-container {
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
  padding: 0 8px;
}

.komorebi-active-layout .widget-container {
  padding-right: 4px;
}

.komorebi-workspaces .ws-btn {
  font-size: 14px;
  background-color: transparent;
  margin: 0 3px;
  color: #95a0ad;
  border: none;
}

.komorebi-workspaces .ws-btn.populated {
  color: #fc7aa5;
}

.komorebi-workspaces .ws-btn:hover,
.komorebi-workspaces .ws-btn.populated:hover,
.komorebi-workspaces .ws-btn.active {
  color: #98bbe9;
  
}

.komorebi-workspaces .float-override {
  color: #0eb986;
  font-size: 14px;
  padding-left: 8px;
}

.active-window-widget {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  padding-right: 8px;
}

.volume-widget {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  padding: 0 8px;
}

.volume-widget .icon {
  color: #89b4fa;
  margin: 1px 2px 0 0;
}

.weather-widget .icon {
  font-size: 16px;
  margin: 0 2px 1px 0;
}

.weather-widget .icon.sunnyDay {
  color: rgb(221, 210, 107);
}

.weather-widget .icon.clearNight {
  color: rgb(107, 189, 221);
  font-size: 22px;
  margin: 1px 2px 0 0;
}

.media-widget {
  padding: 0 4px;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
}

.media-widget .btn {
  color: #acb2c9;
  padding: 0 3px;
  margin: 4px 0;
  font-family: Segoe Fluent Icons;
}

.media-widget .btn:hover {
  color: #89b4fa;
}

.media-widget .btn.play {
  background-color: #313244;
  border-radius: 14px;
  font-size: 16px;
}

.media-widget .btn.disabled,
.media-widget .btn.disabled:hover {
  color: #4e525c;
}
