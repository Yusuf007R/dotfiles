#!/usr/bin/env bash
set -g mode-style "fg=#f2f4f8,bg=#2a2a2a"
set -g message-style "fg=#f2f4f8,bg=#2a2a2a"
set -g message-command-style "fg=#f2f4f8,bg=#2a2a2a"
set -g pane-border-style "fg=#484848"
set -g pane-active-border-style "fg=#78a9ff"
set -g status "on"
set -g status-justify "left"
set -g status-style "fg=#f2f4f8,bg=#161616"
set -g status-left-length "100"
set -g status-right-length "100"
set -g status-left-style NONE
set -g status-right-style NONE
set -g status-left "#[fg=#161616,bg=#78a9ff,bold] #S #[fg=#78a9ff,bg=#161616,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#161616,bg=#161616,nobold,nounderscore,noitalics]#[fg=#78a9ff,bg=#161616] #{prefix_highlight} #[fg=#2a2a2a,bg=#161616,nobold,nounderscore,noitalics]#[fg=#f2f4f8,bg=#2a2a2a] %Y-%m-%d  %I:%M %p #[fg=#78a9ff,bg=#2a2a2a,nobold,nounderscore,noitalics]#[fg=#161616,bg=#78a9ff,bold] #h "
setw -g window-status-activity-style "underscore,fg=#08bdba,bg=#161616"
setw -g window-status-separator ""
setw -g window-status-style "NONE,fg=#dfdfe0,bg=#161616"
setw -g window-status-format "#[fg=#161616,bg=#161616,nobold,nounderscore,noitalics]#[fg=#dfdfe0,bg=#161616] #I  #W #F #[fg=#161616,bg=#161616,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#161616,bg=#2a2a2a,nobold,nounderscore,noitalics]#[fg=#f2f4f8,bg=#2a2a2a,bold] #I  #W #F #[fg=#2a2a2a,bg=#161616,nobold,nounderscore,noitalics]"
